@{
    Layout = "~/Views/Account/_LayoutAccount.cshtml";
}

@model Tower.Models.LoginViewModel

<div class="logo">
    <img src="~/assets/img/logo.png" alt="logo" />
    <strong>
        waferlife
    </strong>后台管理系统
</div>
<div class="box">
    <div class="content">

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-vertical login-form", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h3 class="form-title">
                登录
            </h3>
            <div class="alert fade in alert-danger" style="display: none;">
                <i class="icon-remove close" data-dismiss="alert">
                </i>
                输入任何用户名密码进入.
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="input-icon">
                    <i class="icon-user">
                    </i>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "邮箱" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="input-icon">
                    <i class="icon-lock">
                    </i>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "密码 " })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-actions">
                <label class="checkbox pull-left">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    记住密码
                </label>
                <button type="submit" class="submit btn btn-primary pull-right">
                    登录
                    <i class="icon-angle-right">
                    </i>
                </button>
            </div>
        }
    </div>

</div>

<div class="footer">
    <p>
        @Html.ActionLink("注册新用户", "Register")
    </p>
</div>